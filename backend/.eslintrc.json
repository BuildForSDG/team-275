{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "warn",
            "always"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "no-constant-condition": "error",
        "block-scoped-var": "error",
        "consistent-return": "error",
        "eqeqeq": "error",
        "require-await": "error",
        "vars-on-top": "error"
    }
}
